@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "DisplayingSession";
}

<h1>Displaying Session</h1>
<h4>Session Date: @Context.Session.GetString("SessionTime")</h4>
<h4>Current Date: @DateTime.Now.ToLongDateString()</h4>


<h2>Session List Data</h2>
<table class="table" border="1">
    <thead>
        <tr>
            <th>SL</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Of Birth</th>
            <th>Savings</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.ListData)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.DateofBirth
                </td>
                <td>
                    @item.Savings
                </td>
                <td>
                    @item.Country
                </td>
            </tr>
        }
    </tbody>
</table>